    //  //  // Modules layout //  //  //

{
  "style": "~/.config/waybar/style.css",
  "spacing": 4,
  "modules-left": [
    "custom/os_button",
    "hyprland/workspaces",
    "custom/musicplayer"
],

"modules-center": [
//    "hyprland/window"
    "custom/taskbar"
],

"modules-right": [
    "pulseaudio",
    "group/performance",
    "group/system-info",
    "custom/power"
],

    //  //  // Modules configuration //  //  //

"custom/os_button": {
    "format": "ü™ê",
    "on-click": "~/.config/rofi/wallpaper-menu/wallpaper-menu.sh",
    "tooltip": false
},

"hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{icon}",
    "format-icons": {
      "active": "ÔÑë",
      "focused": "ÔÑë",
      "empty": "ÔÜí",
      "default": "ÔÖÄ"
},

    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
      "6": []
    }
},

"custom/musicplayer": {
    "format": "{}",
    "interval": 2,
    "exec": "~/.config/waybar/modules-scripts/musicplayer.sh",
    "return-type": "json",
    "on-click": "playerctl play-pause"
},

"custom/taskbar": {
  "exec": "~/.config/waybar/modules-scripts/taskbar.sh",
  "interval": 2,
  "format": "{}",
  "tooltip": false
},

"pulseaudio": {
    "on-click": "pavucontrol",
    "format": "{icon}",
    "format-bluetooth": "{icon}Ôäî",
    "format-bluetooth-muted": "Ôö©{icon}Ôäî",
    "format-muted": "Ôö©",
    "format-source": "Ôèâ",
    "format-source-muted": "Ôîπ",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®"
      ]
    }
},

"group/performance": {
  "orientation": "horizontal",
  "modules": [
    "custom/cpu",
    "custom/separator",
    "custom/gpuNmemory"
  ]
},

"custom/cpu": {
    "exec": "~/.config/waybar/modules-scripts/cpu_toggle.sh",
    "on-click": "~/.config/waybar/modules-scripts/cpu_toggle.sh toggle",
    "interval": 5,
    "format": "{}",
    "tooltip": false
},

"custom/gpuNmemory": {
    "exec": "~/.config/waybar/modules-scripts/gpu_toggle.sh",
    "on-click": "~/.config/waybar/modules-scripts/gpu_toggle.sh toggle",
    "interval": 5,
    "tooltip": false
},

"group/system-info": {
  "orientation": "horizontal",
  "modules": [
    "network",
    "custom/separator",
    "battery",
    "custom/separator",
    "clock"
  ]
},

"network": {
    "on-click": "bash ~/.config/rofi/wifi-menu/wifi-menu.sh",
    "format-wifi": "{essid} Ôá´",
    "format-ethernet": "Ethernet Ôûñ",
    "tooltip-format": "Connect√© √† {essid}",
    "format-disconnected": "D√©connect√© ‚ö†"
},

"battery": {
    "interval": 5,
    "states": {
    "warning": 30,
    "critical": 15
},
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% Ôóß",
    "format-plugged": "{capacity}% Ôá¶",
    "format-alt": "{time} {icon}",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ]
},

"clock": {
    "format": "{:%R}",
    "tooltip-format": "<tt><big>{calendar}</big></tt>",
    "format-alt": "{:%d-%m-%Y}"
},

"custom/power": {
    "format": "ÔÄë",
    "on-click": "bash ~/.config/rofi/power-menu/power-menu.sh",
    "tooltip": false
},

"custom/separator": {
  "format": "|",
  "tooltip": false
}

}
